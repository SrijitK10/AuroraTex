{
  "name": "auroratex",
  "version": "1.1.0",
  "description": "AuroraTex - Professional offline LaTeX editor",
  "main": "dist/main/main.js",
  "scripts": {
    "dev": "concurrently \"npm run dev:main\" \"npm run dev:renderer\"",
    "dev:main": "tsc -p tsconfig.main.json && electron dist/main/main.js",
    "dev:renderer": "vite",
    "build": "npm run build:main && npm run build:renderer",
    "build:main": "tsc -p tsconfig.main.json",
    "build:renderer": "vite build",
    "package": "npm run build && electron-builder",
    "package:mac": "npm run build && electron-builder --mac",
    "package:win": "npm run build && electron-builder --win",
    "package:linux": "npm run build && electron-builder --linux",
    "package:all": "npm run build && electron-builder --mac --win --linux",
    "dist": "npm run package:all",
    "start": "npm run build && electron dist/main/main.js",
    "quick-start": "node start.js",
    "prepare-release": "node resources/build/prepare-release.js"
  },
  "devDependencies": {
    "@electron/notarize": "^2.1.0",
    "@types/better-sqlite3": "^7.6.4",
    "@types/node": "^20.5.0",
    "@types/react": "^18.2.20",
    "@types/react-dom": "^18.2.7",
    "@types/tar": "^6.1.13",
    "@types/uuid": "^9.0.2",
    "@vitejs/plugin-react": "^4.0.4",
    "concurrently": "^8.2.0",
    "electron": "^25.6.0",
    "electron-builder": "^24.6.3",
    "typescript": "^5.1.6",
    "vite": "^4.4.9"
  },
  "dependencies": {
    "@codemirror/autocomplete": "^6.18.6",
    "@codemirror/commands": "^6.3.0",
    "@codemirror/fold": "^0.19.4",
    "@codemirror/lang-css": "^6.3.1",
    "@codemirror/lang-html": "^6.4.9",
    "@codemirror/lang-javascript": "^6.2.4",
    "@codemirror/lang-json": "^6.0.2",
    "@codemirror/lang-markdown": "^6.3.4",
    "@codemirror/lang-python": "^6.2.1",
    "@codemirror/lang-xml": "^6.1.0",
    "@codemirror/language-data": "^6.5.1",
    "@codemirror/legacy-modes": "^6.5.1",
    "@codemirror/search": "^6.5.4",
    "@codemirror/state": "^6.3.0",
    "@codemirror/theme-one-dark": "^6.1.3",
    "@codemirror/view": "^6.21.0",
    "@lezer/highlight": "^1.2.1",
    "@replit/codemirror-vim": "^6.3.0",
    "autoprefixer": "^10.4.15",
    "better-sqlite3": "^12.2.0",
    "chokidar": "^3.6.0",
    "codemirror": "^6.0.1",
    "lezer-tex": "^0.0.0-3",
    "pdfjs-dist": "^3.9.179",
    "postcss": "^8.4.28",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "tailwindcss": "^3.3.3",
    "tar": "^6.2.1",
    "uuid": "^9.0.0"
  },
  "build": {
    "appId": "com.auroratex.app",
    "productName": "AuroraTex",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "dist/**/*",
      "node_modules/**/*"
    ],
    "extraResources": [
      {
        "from": "resources/",
        "to": ".",
        "filter": ["**/*"]
      }
    ],
    "icon": "resources/icons/icon.png",
    "mac": {
      "category": "public.app-category.productivity",
      "target": [
        {
          "target": "dmg",
          "arch": ["x64", "arm64"]
        },
        {
          "target": "pkg",
          "arch": ["x64", "arm64"]
        }
      ],
      "icon": "resources/icons/icon.png",
      "hardenedRuntime": true,
      "gatekeeperAssess": false,
      "entitlements": "resources/entitlements.mac.plist",
      "entitlementsInherit": "resources/entitlements.mac.plist"
    },
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64", "ia32"]
        },
        {
          "target": "msi",
          "arch": ["x64", "ia32"]
        }
      ],
      "icon": "resources/icons/icon.png"
    },
    "linux": {
      "target": [
        {
          "target": "AppImage",
          "arch": ["x64"]
        },
        {
          "target": "deb",
          "arch": ["x64"]
        },
        {
          "target": "rpm",
          "arch": ["x64"]
        }
      ],
      "icon": "resources/icons/icon.png",
      "category": "Office"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "license": "resources/license.txt"
    },
    "pkg": {
      "license": "resources/license.txt"
    },
    "afterSign": "resources/build/notarize.js",
    "beforeBuild": "resources/build/before-build.js"
  }
}
